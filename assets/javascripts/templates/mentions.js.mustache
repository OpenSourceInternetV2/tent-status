<div class="row">
  <div class="span8">
    <div class="page-header">
      <h1>
        <small><a href="{{profileUrl}}">{{formatted.domain_entity}} &nbsp;</a></small>Mentions
      </h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span2">&nbsp</div>
  <div class="span8 fetch-pool hide" data-posts-feed="MentionsPostFeed" data-view="FetchPostsPool">
    <a href="#">
      <div class="alert alert-info" style="text-align:center">
        <span class="num_new_posts">0</span><span>&nbsp; New Posts</span>
      </div>
    </a>
  </div>
</div>
<div class="row">
  <div class="span8">
    <ul class="unstyled posts" data-view="MentionsPostFeed">{{#posts}}{{> _post}}{{/posts}}</ul>
  </div>
</div>
