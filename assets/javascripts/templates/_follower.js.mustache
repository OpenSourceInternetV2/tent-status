<tr class="follower" data-id="{{id}}">
  <td>
    {{#avatar}}
    <a href="{{entity}}"><img class="avatar img-rounded" src="{{avatar}}" /></a>
    {{/avatar}}
    <a href="{{entity}}">{{name}}</a>
  </td>
  <td>
    <a href="{{entity}}">{{entity}}</a>
  </td>
  <td>
    {{#authenticated}}
    {{^guest_authenticated}}
    <div class="btn btn-danger remove-follower" data-confirm="Block {{name}}?">Block</div>
    {{/guest_authenticated}}
    {{/authenticated}}
  </td>
  <td>
    {{#guest_authenticated}}
    <form class="span2 pull-rght" data-view="ProfileFollowButton" method="POST">
      <input name="entity" type="hidden" value="{{entity}}" />
      <input class="btn btn-success pull-right" type="submit" value="Follow" />
    </form>
    {{/guest_authenticated}}
    
    {{#authenticated}}
    {{^guest_authenticated}}
    <form class="span2" data-view="ProfileFollowButton" method="POST">
      <input name="entity" type="hidden" value="{{entity}}" />
      <input class="btn btn-success" type="submit" value="Follow" />
    </form>
    {{/guest_authenticated}}
    {{/authenticated}}
  </td>
</tr>
