  .span8
    | {{#profile}}
    .page-header
      .row
        .span2
          img.avatar-large.img-rounded src='{{avatar}}'
        .span6.no-offset
          h2.condensed
            | {{#nameIsEntity}}
            a href='{{{entity}}}' {{name}}
            | {{/nameIsEntity}}
            | {{^nameIsEntity}}
            | {{name}}
