#main-nav {
  margin-left: 30px;
  margin-right: 30px;
  border-left: #C0C0C0;
  border-right: #C0C0C0;

  ul.nav.scale {
    display: none;
  }

  ul.nav.nav-icon {
    li {
      line-height: 36px;
    }
  }

  #new_post_popdown {
    top: 40px;
    width: 490px;
    left: -468px;

    .arrow {
      left: 479px;
    }

    .span8 {
      width: 448px;
    }

    form {
      margin: 0px;
    }
  }

  .navbar-inner {
    min-height: 48px;
    padding-left: 28px;
    padding-right: 28px;
    border-bottom: 1px solid #DCDCDC;
    @include box_shadow(none);

    .brand, .nav li a {
      line-height: 28px;
      border-right: 1px solid #DCDCDC;
    }

    .nav {
      margin: 0px;

      li.active {
        border-top: 4px solid #DDDDDD;
        a {
          float: none;
          padding: 6px 15px 10px;
          color: #555555;
          text-decoration: none;
          text-shadow: 0 1px 0 #ffffff;
          background: inherit;
          @include box_shadow(inherit);
        }
      }

      li.dropdown {
        .caret {
          margin-top: 14px;
          margin-left: 2px;
        }

        ul.dropdown-menu {
          display: block;
          height: 0px;
          @include transparent(0);
          margin-top: -68px;
          overflow: hidden;
          min-width: 90px;
        }

        &:hover {
          ul.dropdown-menu {
            height: auto;
            margin-top: -12px;
            z-index: 9000;
            @include transparent(100);
            @include transition(opacity, ease, 0s, 0.3s);
          }
        }
      }

      &.pull-right {
        li a:last-of-type {
          border-right: 0px;
        }
      }
    }
  }
}

#nav-right {
  border: 1px solid #DCDCDC;
  border-top: 0px;
  margin-top: 20px;
  margin-left: 0px;
  width: 222px;
  position: fixed;

  li {
    padding: 8px;
    border-top: 1px solid #DCDCDC;

    &.active {
      border-left: 2px solid #DCDCDC;
    }

    &.scale {
      display: none;
    }

    &:hover {
      a {
        color: #333333;
      }
    }

    a {
      text-decoration: none;
      color: #555555;
    }

    &.header {
      background-color: #F5F5F5;
    }

    &.footer {
      li {
        border: 0px;
        padding: 8px;
        float: left;
        font-size: 12px;
        line-height: 12px;
        color: #999999;

        a {
          color: inherit;
        }

        &.disc {
          margin-left: 14px;
          padding-left: 0px;
          list-style-type: disc;
        }
      }
    }
  }
}

