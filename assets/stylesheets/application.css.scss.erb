@import './mixins.css.scss';

html, body {
  height: 100%;
}

[class^="sicon-"],
[class*=" sicon-"] {
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-top: 1px;
  *margin-right: .3em;
  line-height: 12px;
  vertical-align: text-top;
  background-image: url(<%= asset_path("stream_sprites.png") %>);
  background-position: 12px 12px;
  background-repeat: no-repeat;

  &.sicon-reply {
    background-position: -12px 0px;
  }

  &.sicon-repost {
    background-position: 0px 0px;
  }
}

[class^="ticon-"],
[class*=" ticon-"] {
  display: inline-block;
  width: 26px;
  height: 32px;
  margin-top: 1px;
  *margin-right: .3em;
  line-height:32px;
  vertical-align: text-top;
  background-image: url(<%= asset_path("topbar_sprites.png") %>);
  background-position: 26px 32px;
  background-repeat: no-repeat;

  &.ticon-menu_close {
    background-position: -50px 0px;
  }

  &.ticon-menu_open {
    background-position: -24px 0px;
  }

  &.ticon-compose {
    background-position: 0px 0px;
  }
}

body {
  background-color: #F3f3f3;
  background-image: url(<%= asset_path('texture.png') %>);
}

#main-nav {
  margin-left: 30px;
  margin-right: 30px;
  border-left: #C0C0C0;
  border-right: #C0C0C0;
  box-shadow: 0px 1px 0px 0px rgba(0,0,0,0.05);

  ul.nav.scale {
    display: none;
  }

  ul.nav.nav-icon {
    li {
      line-height: 36px;
    }
  }

  #new_post_popdown {
    top: 40px;
    width: 460px;
    left: -434px;

    .arrow {
      left: 446px;
    }

    .span8 {
      width: 448px;
    }

    .span7 {
      width: 360px;
    }

    textarea.span7 {
      width: 346px;
    }

    form {
      margin: 0px;
    }

    .popover-content {
      padding: 0px;
      padding-top: 6px;
    }

    li.post {
      border: 0px;
    }

    .m-btn {
      margin-top: 6px;
    }

    .post-header {
      margin-left: 0px;
    }
  }

  .navbar-inner {
    min-height: 48px;
    padding-left: 20px;
    padding-right: 28px;
    border-bottom: 1px solid #DCDCDC;
    @include box_shadow(none);

    .brand, .nav li a {
      line-height: 28px;
      border-right: 1px solid #DCDCDC;
    }

    .brand {
      a.title {
        padding: 6px;
        line-height: 48px;
      }
    }

    .brand {
      padding: 0px;
      padding-left: 0px;

      #user-menu {
        padding-right: 8px;
        cursor: pointer;

        .avatar {
          width: 48px;
          height: 48px;
        }

        .caret {
          margin-top: 26px;
          margin-left: 0px;
        }

        .menu {
          position: absolute;
          display: block;
          height: 0px;
          @include transparent(0);
          margin-top: -68px;
          overflow: hidden;

          background-color: #FEFEFE;
          border: 1px solid #DCDCDC;
          border-top: 0px;
          margin-left: 0px;
          width: 222px;

          li {
            padding: 8px;
            border-top: 1px solid #DCDCDC;
            font-size: 14px;
            font-weight: 400px;

            &.active {
              border-left: 2px solid #DCDCDC;
            }

            &.scale {
              display: none;
            }

            a {
              text-decoration: none;
              color: inherit;
              display: block;
            }

            &:hover {
              color: #333333;
              background-color: #F3F3F3;
            }
          }
        }
      }
    }

    .nav {
      margin: 0px;

      li.active {
        border-top: 4px solid #DDDDDD;
        a {
          float: none;
          padding: 6px 15px 10px;
          color: #555555;
          text-decoration: none;
          text-shadow: 0 1px 0 #ffffff;
          background: inherit;
          @include box_shadow(inherit);
        }
      }

      &.pull-right {
        li a:last-of-type {
          border-right: 0px;
        }
      }
    }
  }
}

#main-container, #main-nav .navbar-inner {
  background-color: #FEFEFE;
  background-image: url(<%= asset_path('bodytexture.png') %>);
  border-right: 1px solid #DCDCDC;
  border-left: 1px solid #DCDCDC;
}

#main {
  margin-top: 20px;
}

.new-post-form, .reply-post-form {
  .char-limit {
    margin-top: 6px;
    margin-right: 12px;
  }
}

.well li.post {
  border: 0px;
}

li.post {
  border-bottom: 1px solid #EEE;
  padding: 0px;
  margin-bottom: 8px;
  padding-bottom: 2px;

  .m-btn {
    margin-top: 0px;
  }

  .avatar-container {
    min-height: 60px;
  }

  .post-header, .post-body, .post-sub-header {
    margin-left: 6px;
  }

  .reply-container {
    margin-left: 40px;

    &.repost-reply-container {
      margin-left: -20px;
    }
  }

  .post-header {
    h5 {
      margin-top: 0px;
      margin-bottom: 0px;
    }

    a:hover {
      text-decoration: none;
    }

    .post-date {
      font-weight: normal;
      float: right;
    }
  }

  .actions {
    .offset1 {
      margin-left: 82px;
    }
  }

  .showOnHover {
    visibility: hidden;

    &.show {
      visibility: visible;
    }

    &.hide {
      visibility: hidden;
    }
  }

  &:hover {
    .showOnHover {
      visibility: visible;
      @include transition(visibility, ease-in-out, 0s, 0.1s);
    }

    &.hide {
      visibility: hidden;
    }

    &.show {
      visibility: visible;
    }
  }

  .post.repost {
    margin-left: 68px;
    margin-top: -32px;
    padding: 6px;
    background-color: #EEEEEE;
    border: 1px solid #DCDCDC;

    .post-header {
      .post-date {
        display: inline-block;
        float: none;
      }
    }
  }
}

#new_post_button {
  cursor: pointer;
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

#main-container {
  min-height: 100%;
  margin-top: 48px;
  margin-right: 30px;
  margin-left: 30px;

  .well, textarea {
    @include rounded(0px)
  }

  .well.span8 {
    padding: 8px;
  }

  textarea {
    margin-bottom: 4px;
  }

  .followings table, .followers table {
    td {
      line-height: 48px;
      word-wrap: break-word;
    }
  }

  .followers table .follow-button {
    input[type=submit] {
      margin-top: 8px;
    }
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

textarea.span8 {
  padding: 4px 6px;
}

.profile-stats {
  .stat {
    text-align: center;
    float: left;
    line-height: 32px;
    margin-right: 12px;

    .title {
      font-size: 16px;
      font-weight: 500;
    }
    .value {
      font-size: 20px;
      font-weight: 600;
    }
  }
}

.has-overflow {
  overflow: auto;
  word-break: break-word;
  word-wrap: break-word;
}

.offset60 {
  margin-left: 60px;
}

.no-offset {
  margin-left: 0px;
}

img.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
}

img.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

