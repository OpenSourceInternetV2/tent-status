@import 'compass';
@import 'settings';
@import 'bootstrap';
@import 'bootstrap-responsive';
@import 'bootstrap-overrides';
@import './common.css.scss';
@import 'font-awesome';
@import 'additions';

html, body {
  height: 100%;
}

body {
  margin-top: 40px;
  font-family: $paragraphFont;
}

.fetch-posts-pool {
  display: block;
  margin-right: 16px;
}

.v-navbar-fixed-left {
  position: fixed;
  top: 0px;
  left: 0px;
  bottom: 0px;
  background: $mainColor;
  color: $white;
  border-width: 0 1px 0 0;
  border-style:solid;
  border-color:darken($mainColor, 10%);

  .v-navbar-inner {
    margin-left: 10px;
    margin-right: 10px;
    height: 100%;

    ul {
      li {
        margin-top: 10px;
        a {
          &:hover, &:active {
            text-decoration: none;
          }
        }
      }
    }
  }
}

.fetch-pool {
  width: $content_width;
}

.content-width {
  width: $content_width;
}

.profile-left {
  width: $post_body_width - 80px;
}

#main-container {
  margin-left:300px;
}

#main {
  width: $content_width;
  padding-left: 40px;
}

#author-info {
  position: absolute;
  top: 39px;
  left: $content_width + 221px;
  width: 170px;
  padding: 6px;
  padding-top: 0px;
  border: 1px solid $black;
  background-color: $white;

  h3 {
    font-size: 14px;
    line-height: 14px;
    margin-top: 4px;
    margin-bottom: 4px;
  }

  p {
    font-size: 12px;
  }
}

.profile-stats {
  line-height: 26px;
  font-size: 16px;
}

#main-nav {
  background: $secondaryColor;
  padding-left: 1.3em;
  padding-right: 1.3em;
  color: $black;
  text-align: left;

  border-color: darken($secondaryColor, 5%);
  border-style:solid;
  border-width: 0 1px 0 0;

  position: fixed;
  left: 68px;
  top: 0px;
  bottom: 0px;
  line-height: 1.5rem;
  z-index: 1031;

  ul {
    li {
      padding-top: 4px;
      font-size: 1rem;
      margin-left: 6px;
      margin-right: 6px;

      &.brand {
        h1 {
          font-size: 1.5rem;
          margin: 0px;
        }
        margin-bottom: 10px;
      }

      a {
        color: $dark_gray;

        &:hover {
          text-decoration: none;
        }
      }

      &.active {
        a {
          color: $black;
        }
      }
    }
  }
}

ul.posts {
  width: $content_width;
}

li.post {
  &.conversation {
    border-top: 3px solid $gray;
    border-bottom: 4px solid $gray;

    margin-top: 20px;
    margin-bottom: 20px;

    .parents, .children {
      li.post {
        background-color: $gray;
      }
    }
  }

  .post-container {
    width: $post_body_width;

    .post-container {
      width: $repost_width;
    }
  }

  h5 {
    margin: 0px;
  }

  .post-date {
    float: right;
    margin-left: 12px;
    font-variant: small-caps;
    font-size: 0.875rem; /* 14/16 */
  }

  .actions {
    .action {
      visibility: hidden;
      margin-right: 60px;
      display: inline;
      i {
        background-size: 14px 14px;
        width: 14px;
        height: 14px;
        display: inline-block;
        cursor: pointer;

        &.reply {
          background-image: url(<%= asset_path('reply.png') %>);
        }

        &.repost {
          background-image: url(<%= asset_path('repost.png') %>);
        }

        &.edit {
          background-image: url(<%= asset_path('edit.png') %>);
        }

        &.conversation {
          background-image: url(<%= asset_path('conversation.png') %>);
        }
      }
    }
  }

  &:hover {
    > .row > .post-container .actions {
      .action {
        visibility: visible;
      }
    }
  }
}

.new-post-form, .reply-post-form, .edit-post-form {
  margin-bottom: 8px;
  .char-limit {
    margin-top: 14px;
    margin-right: 12px;
  }
}

.followings {
  .m-btn {
    margin-top: 0px;
  }
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

.no-offset {
  margin-left: 0px;

  &.span7 {
    width: 560px;
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

img.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
}

img.avatar-medium {
  width: 57px;
  height: 57px;
  margin-right: 4px;
}

img.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

