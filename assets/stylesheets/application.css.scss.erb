//= require_self

@import 'compass/css3';
@import 'compass/utilities/general/clearfix';
@import "compass/utilities/links/link-colors";
@import 'settings';
@import 'bootstrap';
@import 'bootstrap-responsive';
@import 'bootstrap-overrides';
@import './common.css.scss';
@import 'font-awesome';
@import 'additions';
@import 'permissions';

//---------------------
//
// BASIC ELEMENT STYLES
//
//---------------------

html, body {
  height: 100%;
}

body {
  font-family: $paragraphFont;
}

h1,h2,h3,h4 {
  font-family: $headingFont;
}
h5,h6 {
  font-weight:normal;
  font-family: $headingFont;
}

.table .align-middle {
  vertical-align:middle;
}

.fetch-posts-pool {
  display: block;
  margin-right: 16px;
}

//---------------------
//
// LAYOUT
//
// note that these are for mobile view,
// desktop rules come after breakpoints
//---------------------

#main-container {
  @include clearfix;
  margin-top: em($lineHeight);
  width:100%;
}

#main .row {
  margin-left:0;
}

#main {
  width:90%;
  margin-left:5%;
}

#author-info {
  // Hidden in mobile view
  display:none;
}

//---------------------
//
// VERTICAL NAVIGATION BAR (GREEN)
//
//---------------------

.v-navbar-fixed-left {
  @include clearfix;
  z-index:10;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  padding-top:$navIconMargin;
  padding-bottom: $navIconMargin;

  background-color: $mainColor;
  color: $white;

  border-width: 1px 0 0 0;
  border-style:solid;
  border-color:darken($mainColor, 7%);
}

  
  // Icons inside the nav bar
  .nav-icon {
    float:right;
    margin-right:$navIconMargin;
    @include transition-property(color);
    @include transition-duration(0.2s);

    &:hover {
      text-decoration:none;
      color: darken($mainColor, 10%);
    }
  }

  // Style for the selected icon
  .nav-selected .nav-icon {
    background-image:none;
    background-color: darken($mainColor, 10%);
    border-color: darken($mainColor, 15%);
    text-shadow:none;
    color:lighten($mainColor, 5%);
  }

//---------------------
//
// APP NAVIGATION BAR (GRAY)
//
//---------------------

#main-nav {
  @include clearfix;
  background: $secondaryColor;
  color: $black;
  text-align: left;

  border-color: darken($secondaryColor, 5%);
  border-style:solid;
  border-width: 0 0 1px 0;

  line-height: 1.5rem;
  z-index: 1031;
}

// App name
.brand {
  //Not displaying in the proprietary version
  display:none;

  float:left;
  margin:0;
  line-height:em($lineHeight * 4, 36px);
}

// Menu button, shown only on mobile and tablet viewports
.menu-switch {
  display:block;
  text-align:center;
  font-size:em(18px);
  line-height: em($lineHeight * 4 / em(18px));
  cursor:pointer;
}

// List (timeline, mentions, profile..)
.app-nav-list {
  clear:both;
  display:none;
  width:100%;
  margin-top: em($lineHeight);
  float:left;
}

  // List elements
  .app-nav-list li {
    text-align:center;
    padding-top: em($lineHeight * 2);
    padding-bottom: em($lineHeight * 2);
    padding-left: em($lineHeight);
    padding-right: em($lineHeight * 2);
    font-size: em(20px);

    &.brand {
      h1 {
        font-size: 1.5rem;
        margin: 0px;
      }
      margin-bottom: 10px;
    }

    a {
      color: $dark_gray;

      &:hover {
        text-decoration: none;
      }
    }

    &.active {
      background-color: lighten($secondaryColor, 5%);
    }
  }

    // Some spacing for icons in the list
    .app-nav-list i {
      margin-right:0.5em;
    }


.mentions-autocomplete {
  margin-bottom:em($lineHeight);
}

.post-profile-name a {
  font-weight:700;
  color: $paragraphColor;
}

//---------------------
//
// PROFILE VIEW
//
//---------------------

.profile-entity {
  font-size: em(18px);
  color: $grayTextColor;
}

.profile-name {
  line-height:1em;
  margin:0;
}

.profile-count-infos {
  margin-top: em($lineHeight);
  margin-bottom: em($lineHeight);
  width:100%;
  text-align:center;
}

.profile-count-infos tr td {
  border-width: 0 1px 0 0;
  border-style:solid;
  border-color:$secondaryColor;

  &:last-child {
    border-width:0;
  }
}

.profile-right {
  margin-left: em($lineHeight);
}

.profile-left {
  margin-top: em($lineHeight);
}

.avatar-table-column {
  width:42px;
}

.post-container {
  width:80%;
  float:right;

  .post-container {
    width: 70%;
  }
}

.table .post-name {
  font-size: em(20px);
  font-weight:700;
  color: $paragraphColor;
  & a:visited {
    color:$paragraphColor;
  }
}

//---------------------
//
// FEED
//
//---------------------

.post-body p {
  margin-bottom:0;
}

.post {
  &.conversation {
    border-top: 3px solid $gray;
    border-bottom: 4px solid $gray;

    margin-top: 20px;
    margin-bottom: 20px;

    .parents, .children {
      li.post {
        background-color: $gray;
      }
    }
  }

  h5 {
    margin: 0px;
    line-height:1em;
  }

  .post-date {
    color:$grayTextColor;
    float: right;
    margin-left: 12px;
    font-size: em(12px);
  }

  &:hover {
    > .row > .post-container .actions {
      .action {
        opacity:1;
      }
    }
  }
}

.action {
  margin-right: 30px;
  display: inline;
  cursor: pointer;
  color: rgba(0,0,0,0.6);
  @include transition-property(color, opacity);
  @include transition-duration(0.2s, 0.2s);

  &:hover {
    color: rgba(0,0,0,0.9);
  }
}

.actions {
  margin-bottom: em($lineHeight);
}

//---------------------
//
// FORMS
//
//---------------------

.new-post-container {
  margin-bottom: em($lineHeight);
}

.new-post-form, .reply-post-form, .edit-post-form {
  margin-bottom: 8px;
  .char-limit {
    line-height:em(30px);
    margin-right: 12px;
  }
}

.edit-post-form .btn {
  margin-left:em($lineHeight / 2);
}

.followings {
  .m-btn {
    margin-top: 0px;
  }
}

//---------------------
//
// AVATARS
//
//---------------------

.avatar-container {
  float:left;
}

.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
  border-radius:4px;
}

.avatar-medium {
  width: 57px;
  height: 57px;
  margin-right: 4px;
}

.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

//---------------------
//
// MISC
//
//---------------------

.show {
  display:block;
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

.no-offset {
  margin-left: 0px;

  &.span7 {
    width: 560px;
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

//---------------------
//
// BREAKPOINTS (everything above is the mobile view)
//
//---------------------

// First breakpoint where content width isn't 100%
@media screen and (min-width: 37em) {
  .custom-container {
    width:$feedWidth;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main-container {
    width:$feedWidth;
    margin-left: auto;
    margin-right: auto;
  }
  #main {
    margin-left:0;
    width: $feedWidth;
  }

  .post {
    width:40em;
  }

  .post-container {
    width: em(560px - 42px - 20px);

    .post-container {
      width: em(560px - 42px - 20px - 42px - 10px);
    }
  }
}

// Desktop breakpoint, moving navs to the left
@media screen and (min-width: 70em) {
  .app-nav-list {
    display:block;
    width:auto;
    margin-top: 0;
  }

  .app-nav-list li {
    text-align:left;
    font-size: em(16px);
    line-height: em($lineHeight * 2);
    padding-top:0;
    padding-bottom:0;
  }

  .custom-container {
    width:auto;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main {
    width: 40em;
    margin-left: 0;
  }

  .v-navbar-fixed-left {
    position: fixed;
    top: 0px;
    left: 0px;
    right:auto;
    bottom: 0px;
    padding-left:$navIconMargin;
    border-width: 0 1px 0 0;
  }

    .nav-icon {
      margin-bottom:$navIconMargin;
    }

  .menu-switch {
    display:none;
  }


  #main-nav {
    position:fixed;
    left:$navIconMargin * 2 + 48px;
    top:0;
    bottom:0;
    text-align: center;

    border-width: 0 1px 0 0;

    z-index: 1031;
  }

  #main-container {
    margin-left:$vNavWidth + 170px;
    width: auto;
  }

  .posts {
    width: $content_width;
  }
  .actions {
    margin-bottom: 0;
  }

  .action {
    opacity:0;
  }

  .post {
    &:hover {
      > .row > .post-container .actions {
        .action {
          opacity:1;
        }
      }
    }
  }

  #author-info {
    display:block;
    position: absolute;
    top: 39px;
    max-width: 18em;
    left: $content_width + $vNavWidth + 220px;
    padding: em($lineHeight);
    border: 1px solid #bbbbbb;
    border-radius:4px;
    background-color: $white;

    h3 {
      font-size: em(18px);
      line-height: em(18px);
      margin:0;
    }
  }

  .author-info-bio {
    margin-top: em($lineHeight);
  }
  .author-info-top-container {
    @include clearfix;
  }
  ul.author-count-infos {
    margin-left: em($lineHeight);
  }

  .fetch-pool {
    width: $content_width;
  }

  .content-width {
    width: $content_width;
  }
}
