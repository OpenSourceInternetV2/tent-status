@mixin rounded($amount) {
  -webkit-border-radius: $amount;
  -moz-border-radius: $amount;
  border-radius: $amount;
}

@mixin transition($property, $fn, $duration, $delay) {
  transition-property: $property;
  transition-duration: $duration;
  transition-timing-function: $fn;
  transition-delay: $delay;

  /* Firefox 4 */
  -moz-transition-property: $property;
  -moz-transition-duration: $duration;
  -moz-transition-timing-function: $fn;
  -moz-transition-delay: $delay;

  /* Safari and Chrome */
  -webkit-transition-property: $property;
  -webkit-transition-duration: $duration;
  -webkit-transition-timing-function: $fn;
  -webkit-transition-delay: $delay;

  /* Opera */
  -o-transition-property: $property;
  -o-transition-duration: $duration;
  -o-transition-timing-function: $fn;
  -o-transition-delay: $delay;
}

@mixin transparent($amount) {
  filter: alpha(opacity=$amount);
	-khtml-opacity: $amount/100;
	-moz-opacity: $amount/100;
	opacity: $amount/100;
}

@mixin box_shadow($value) {
  -webkit-box-shadow: $value;
     -moz-box-shadow: $value;
          box-shadow: $value;
}

html, body {
  height: 100%;
}

[class^="sicon-"],
[class*=" sicon-"] {
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-top: 1px;
  *margin-right: .3em;
  line-height: 12px;
  vertical-align: text-top;
  background-image: url(<%= asset_path("stream_sprites.png") %>);
  background-position: 12px 12px;
  background-repeat: no-repeat;

  &.sicon-reply {
    background-position: -12px 0px;
  }

  &.sicon-repost {
    background-position: 0px 0px;
  }
}

[class^="ticon-"],
[class*=" ticon-"] {
  display: inline-block;
  width: 26px;
  height: 32px;
  margin-top: 1px;
  *margin-right: .3em;
  line-height:32px;
  vertical-align: text-top;
  background-image: url(<%= asset_path("topbar_sprites.png") %>);
  background-position: 26px 32px;
  background-repeat: no-repeat;

  &.ticon-menu_close {
    background-position: -50px 0px;
  }

  &.ticon-menu_open {
    background-position: -24px 0px;
  }

  &.ticon-compose {
    background-position: 0px 0px;
  }
}

