//= require_self

@import 'compass';
@import 'settings';
@import 'bootstrap';
@import 'bootstrap-responsive';
@import 'bootstrap-overrides';
@import './common.css.scss';
@import 'font-awesome';
@import 'additions';
@import 'permissions';

//---------------------
//
// BASIC ELEMENT STYLES
//
//---------------------

html, body {
  height: 100%;
}

body {
  font-family: $paragraphFont;
}

h1,h2,h3 {
  font-family: 'Avenir LT W01 85 Heavy';
  font-weight:normal;
}
h4,h5,h6 {
  font-family: 'Avenir LT W01 55 Roman';
  font-weight:normal;
}

.fetch-posts-pool {
  display: block;
  margin-right: 16px;
}

// Vertical navigation bar

.v-navbar-fixed-left {
  @include clearfix;
  z-index:10;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  padding-top:$navIconMargin;
  padding-bottom: $navIconMargin;

  background-color: $mainColor;
  color: $white;

  border-width: 1px 0 0 0;
  border-style:solid;
  border-color:darken($mainColor, 7%);
}

  .nav-icon {
    float:right;
    margin-left:$navIconMargin;
    @include transition-property(color);
    @include transition-duration(0.2s);

    &:hover {
      text-decoration:none;
      color: lighten($mainColor, 10%);
    }
  }

.brand {
  float:left;
  margin:0;
  line-height:em($lineHeight * 4, 36px);
}

.menu-switch {
  line-height: em($lineHeight * 4);
  float:right;
}

.app-nav-list {
  clear:both;
  display:none;
  float:left;
}

.show {
  display:block;
}

.mentions-autocomplete {
  margin-bottom:em($lineHeight);
}

#main-container {
  @include clearfix;
  margin-top: em($lineHeight * 2);
  width:100%;
}

#main .row {
  margin-left:0;
}

#main {
  width:90%;
  margin-left:5%;
}

#author-info {
  // Hidden in mobile view
  display:none;
}

.profile-stats {
  line-height: 26px;
  font-size: 16px;
}

#main-nav {
  @include clearfix;
  background: $secondaryColor;
  padding-left: em($lineHeight);
  padding-right: em($lineHeight);
  color: $black;
  text-align: left;

  border-color: darken($secondaryColor, 5%);
  border-style:solid;
  border-width: 0 0 1px 0;

  line-height: 1.5rem;
  z-index: 1031;

  ul {
    li {
      padding-top: 4px;
      font-size: 1rem;
      margin-left: 6px;
      margin-right: 6px;

      &.brand {
        h1 {
          font-size: 1.5rem;
          margin: 0px;
        }
        margin-bottom: 10px;
      }

      a {
        color: $dark_gray;

        &:hover {
          text-decoration: none;
        }
      }

      &.active {
        a {
          color: $black;
        }
      }
    }
  }
}

.post {
  position:relative;

  margin-bottom: em($lineHeight);
}

.post-container {
  width:80%;
  float:right;

  .post-container {
    width: 70%;
  }
}

.post {
  &.conversation {
    border-top: 3px solid $gray;
    border-bottom: 4px solid $gray;

    margin-top: 20px;
    margin-bottom: 20px;

    .parents, .children {
      li.post {
        background-color: $gray;
      }
    }
  }

  h5 {
    margin: 0px;
  }

  .post-date {
    float: right;
    margin-left: 12px;
    font-size: em(12px);
  }

  .actions {
    .action {
      margin-right: 60px;
      display: inline;
      cursor: pointer;
      opacity:0;
      color: rgba(0,0,0,0.6);
      @include transition-property(color, opacity);
      @include transition-duration(0.2s, 0.2s);

      &:hover {
        color: rgba(0,0,0,0.9);
      }
    }
  }

  &:hover {
    > .row > .post-container .actions {
      .action {
        opacity:1;
      }
    }
  }
}

.new-post-form, .reply-post-form, .edit-post-form {
  margin-bottom: 8px;
  .char-limit {
    line-height:em(30px);
    margin-right: 12px;
  }
}

.followings {
  .m-btn {
    margin-top: 0px;
  }
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

.no-offset {
  margin-left: 0px;

  &.span7 {
    width: 560px;
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

.avatar-container {
  float:left;
}

.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
  border-radius:4px;
}

.avatar-medium {
  width: 57px;
  height: 57px;
  margin-right: 4px;
}

.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

//---------------------
//
// BREAKPOINTS (everything above is the mobile view)
//
//---------------------

// First breakpoint where content width isn't 100%
@media screen and (min-width: 37em) {
  .custom-container {
    width:40em;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main-container {
    width:40em;
    margin-left: auto;
    margin-right: auto;
  }
  #main {
    margin-left:0;
  }

  .post {
    width:40em;
  }

  .post-container {
    width: em(560px - 42px - 20px);
  }
}

// Desktop breakpoint, moving navs to the left
@media screen and (min-width: 70em) {

  .custom-container {
    width:auto;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main {
    width: 40em;
    margin-left: 0;
  }

  .v-navbar-fixed-left {
    position: fixed;
    top: 0px;
    left: 0px;
    right:auto;
    bottom: 0px;
    padding-right:$navIconMargin;
    border-width: 0 1px 0 0;
  }

    .nav-icon {
      margin-bottom:$navIconMargin;
    }

  .menu-switch {
    display:none;
  }
  .app-nav-list {
    display:block;
  }

  #main-nav {
    position:fixed;
    left:$navIconMargin * 2 + 48px;
    top:0;
    bottom:0;
    padding-left: 1.3em;
    padding-right: 1.3em;
    text-align: left;

    border-width: 0 1px 0 0;

    z-index: 1031;
  }

  #main-container {
    margin-left:$vNavWidth + 250px;
    width: auto;
  }

  .posts {
    width: $content_width;
  }

  #author-info {
    position: absolute;
    top: 39px;
    left: $content_width + $vNavWidth + 320px;
    width: 170px;
    padding: 6px;
    padding-top: 0px;
    border: 1px solid $black;
    background-color: $white;

    h3 {
      font-size: 14px;
      line-height: 14px;
      margin-top: 4px;
      margin-bottom: 4px;
    }

    p {
      font-size: 12px;
    }
  }

  .fetch-pool {
    width: $content_width;
  }

  .content-width {
    width: $content_width;
  }

  .profile-left {
    width: $post_body_width - 80px;
  }
}
