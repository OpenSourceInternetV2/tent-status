@import './mixins.css.scss';

@media
only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (   min--moz-device-pixel-ratio: 2),
only screen and (     -o-min-device-pixel-ratio: 2/1),
only screen and (        min-device-pixel-ratio: 2),
only screen and (                min-resolution: 192dpi),
only screen and (                min-resolution: 2dppx) { 
  
  [class^="sicon-"],
  [class*=" sicon-"] {
    background-image: url(<%= asset_path("stream_sprites@2x.png") %>);
    background-size: 36px;
  }

  [class^="ticon-"],
  [class*=" ticon-"] {
    background-image: url(<%= asset_path("topbar_sprites@2x.png") %>);
    background-size: 76px;
  }

}

@media (max-width: 979px) {
  #new_post_popdown {
    left: 0px;

    .arrow {
      left: 10%;
    }
  }
}

@media (max-width: 979px) {
  #main-nav {
    position: fixed;

    .navbar-inner {
      padding-top: 0px;
      padding-bottom: 0px;
    }
  }
}

@media (min-width: 842px) {
  #main-nav {
    .navbar-inner {
      .brand {
        #user-menu {
          &:hover {
            .menu {
              height: auto;
              margin-top: 0px;
              z-index: 9000;
              @include transparent(100);
              @include transition(opacity, ease-in-out, 0s, 0.3s);
            }
          }
        }
      }
    }
  }
}

@media (max-width: 841px) {
  .mobile-hide {
    display: none;
  }

  #main-nav {
    ul.nav.scale {
      display: block;
    }

    .navbar-inner {
      padding-left: 6px;
      padding-right: 6px;

      .brand {
        margin-left: 0px;

        #user-menu {
          &.active, &:hover {
            .menu {
              height: auto;
              margin-top: 0px;
              z-index: 9000;
              @include transparent(100);
            }
          }
        }
      }
    }
  }

  #main {
    margin-left: 20px;
    margin-right: 20px;

    .new-post-container {
      display: none;
    }

    ul.posts {
      width: auto;
    }

    li.post {
      .avatar-container {
        float: left;
        min-height: 50px;
      }

      .post-header, .post-body, .post-sub-header, .post.repost, .actions .offset1 {
        margin-left: 48px;
      }

      .reply-container {
        margin-left: 0px;
      }

      .post.repost {
        margin-top: 26px;
        margin-left: 0px;
        [class*='span'] {
          margin-left: 0px;
        }

        .post-header {
          .post-date {
            font-size: 10px;
            float: right;
          }
        }

        .post-body {
          margin-top: 10px;
        }
      }
    }
  }

  body {
    padding-right: 0px;
    padding-left: 0px;
  }

  .navbar-fixed-top,
  .navbar-fixed-bottom {
    margin-right: -20px;
    margin-left: -20px;
  }
  .container-fluid {
    padding: 0;
  }
  .dl-horizontal dt {
    float: none;
    width: auto;
    clear: none;
    text-align: left;
  }
  .dl-horizontal dd {
    margin-left: 0;
  }
  .container {
    width: auto;
  }
  .row-fluid {
    width: 100%;
  }
  .row,
  .thumbnails {
    margin-left: 0;
  }
  .thumbnails > li {
    float: none;
    margin-left: 0;
  }
  [class*="span"],
  .row-fluid [class*="span"] {
    display: block;
    float: none;
    width: auto;
    margin-left: 0;
  }
  .span12,
  .row-fluid .span12 {
    width: 100%;
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
  }
  .input-large,
  .input-xlarge,
  .input-xxlarge,
  input[class*="span"],
  select[class*="span"],
  textarea[class*="span"],
  .uneditable-input {
    display: block;
    width: 100%;
    min-height: 30px;
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
  }
  .input-prepend input,
  .input-append input,
  .input-prepend input[class*="span"],
  .input-append input[class*="span"] {
    display: inline-block;
    width: auto;
  }
  .modal {
    position: fixed;
    top: 20px;
    right: 20px;
    left: 20px;
    width: auto;
    margin: 0;
  }
  .modal.fade.in {
    top: auto;
  }

  #main-nav #new_post_popdown {
    .span1, .span8, .span7 {
      float: left;
    }

    .span1 {
      width: 64px;
    }

    .span8 {
      width: 448px;
      margin-left: 20px;
    }

    .span7 {
      width: 360px;
    }

    textarea.span7 {
      width: 360px;
    }

    form {
      margin: 0px;
    }
  }
}

@media (min-width: 842px) {
  #main-nav #new_post_popdown {
    width: 654px;
    left: -628px;

    .arrow {
      left: 640px;
    }

    .span8 {
      width: 620px;
    }

    .span7 {
      width: 556px;
    }

    textarea.span7 {
      width: 542px;
    }
  }
}

@media (max-width: 540px) {
  #main-nav {
    #new_post_popdown {
      width: 312px;
      left: -286px;

      .span1 {
        display: none;
      }

      .span7 {
        width: 272px;
      }

      textarea.span7 {
        width: 272px;
      }

      .arrow {
        left: 298px;
      }

      .post-header {
        display: none;
      }
    }
  }
}


@media (max-width: 480px) {
  #main-nav, #main-container {
    margin-right: 0px;
    margin-left: 0px;
  }
  #nav-right {
    left: 0px;
    right: 0px;
  }
  #main-container {
    .followings table, .followers table {
      td {
        max-width: 180px;
      }
    }
  }
}

@media (max-width: 479px) {
  .mobile-hide-landscape {
    display: block;
  }
  .mobile-hide-portrait {
    display: none;
  }
}

@media (min-width: 480px) {
  .mobile-hide-landscape {
    display: none;
  }
  .mobile-hide-portrait {
    display: block;
  }
}

@media (min-width: 842px) {
  #main-nav {
    margin-right: auto;
    margin-left: auto;
    width: 702px;
  }
  #main-container {
    margin-right: auto;
    margin-left: auto;
    width: 660px;
  }

  input.span8, textarea.span8, .uneditable-input.span8 {
    width: 586px;
  }

  .span8 {
    width: 600px;
  }

  #main {
    ul.posts {
      width: 618px;
    }

    li.post {
      .post-header, .post-body, .post-sub-header {
        margin-left: 0px;
      }

      .post.repost {
        margin-top: 0px;
        margin-left: 0px;
      }
    }
  }
}

