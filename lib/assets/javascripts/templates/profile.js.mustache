<div class="row">
  <div class="page-header">
    <div class="row">
      <img class="avatar avatar-large profile-avatar" src="{{avatar}}" />

      <div class="pull-left profile-right">
        <h2 class="profile-name">
          {{^has_name}}
          <a href="{{{entity}}}">{{name}}</a>
          {{/has_name}}
          
          {{#has_name}}{{name}}{{/has_name}}
        </h2>

        {{#has_name}}
        <a href="{{{entity}}}" class="profile-entity">{{formatted.entity}}</a>
        {{/has_name}}

        <div class="profile-left no-offset has-overflow">
          <p>{{formatted.bio}}</p>
        </div>

        <a href='{{website_url}}'>{{formatted.website_url}}</a>
      </div>
    </div>
    <div class="row">
      <table class="profile-count-infos">
        <tr>
          <td data-view='AuthorInfoFollowersCount'></td>
          <td data-view='AuthorInfoFollowingCount'></td>
          <td data-view='AuthorInfoPostsCount'></td>
          {{^entity_authenticated}}
          <td data-view='FollowButton'></td>
          {{/entity_authenticated}}
        </tr>
      </table>
    </div>
  </div>
</div>

{{#config.authenticated}}
<div class="row new-post-container">
  <div data-view="NewPostForm"></div>
</div>
{{/config.authenticated}}

<div class="row">
  <div data-view="FetchPostsPool"></div>
</div>

<div class="row">
  <ul class="unstyled posts pull-left" data-view="ProfilePostsFeed"></ul>
</div>
