{{#entity}}
<span class='repost-label'>
  Reposted by <span class="post-profile-name" data-view="ProfileName" data-entity="{{entity}}"></span>
  {{#count}}
  and {{count}} {{pluralized_other}}
  {{/count}}
</span>
{{/entity}}

<div class='clearfix mention-avatars'>
{{#mentions}}
  <div class='pull-left' data-view='ProfileAvatar' data-entity='{{entity}}' title='{{entity}}'></div>
{{/mentions}}
</div>
